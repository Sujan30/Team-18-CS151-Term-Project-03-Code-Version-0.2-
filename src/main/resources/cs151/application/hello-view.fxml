<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="homeRoot" alignment="CENTER" spacing="16.0" xmlns:fx="http://javafx.com/fxml"
  fx:controller="cs151.application.MainController">
    <padding>
        <Insets bottom="24.0" left="32.0" right="32.0" top="24.0"/>
    </padding>

    <Label text="Curriculum Setup" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    <Label text="Choose an option below to configure course resources." wrapText="true"/>
    <Button fx:id="defineLanguageButton"
      text="Define Programming Languages"
      maxWidth="Infinity"
      focusTraversable="false"
      onAction="#onDefineProgrammingLanguage"/>
    <Button fx:id="defineStudentProfilesButton"
      text="Define Student Profiles"
      maxWidth="Infinity"
      focusTraversable="false"
      onAction="#onDefineStudentProfiles"/>
    <Button fx:id="searchStudentProfilesButton"
      text="Search Student Profiles"
      maxWidth="Infinity"
      focusTraversable="false"
      onAction="#onSearchStudentProfiles"/>
    <Button fx:id="reportsButton"
      text="View Reports"
      maxWidth="Infinity"
      focusTraversable="false"
      onAction="#onViewReports"/>
</VBox>
